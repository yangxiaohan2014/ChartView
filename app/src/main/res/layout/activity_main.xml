<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:PaintView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LineAndColumnActivity">

    <Button
        android:id="@+id/line"
        android:text="LineChart"
        android:layout_marginTop="20dp"
        PaintView:layout_constraintTop_toTopOf="parent"
        PaintView:layout_constraintRight_toRightOf="parent"
        PaintView:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/pie"
        android:text="PieChart"
        android:layout_marginTop="20dp"
        PaintView:layout_constraintTop_toBottomOf="@+id/line"
        PaintView:layout_constraintRight_toRightOf="parent"
        PaintView:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>